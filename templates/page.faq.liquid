<script>
  
  jQuery(document).ready(function( $ ) {
	
      const $navbar = $('#shopify-section-header');

      $('a[href^="#"]').on('click', function(e) {
          e.preventDefault();

          const scrollTop =
              $($(this).attr('href')).position().top -
              $navbar.outerHeight();

          $('html, body').animate({ scrollTop });
      })

  });
  
</script>