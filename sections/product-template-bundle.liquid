      <div class="grid__item bundle-items medium-up--two-thirds">
         <div class="grid bundle-grid" data-bundle-min="{{ bundle_min }}" data-bundle-max="{{ bundle_max
            }}">
           	<div class="grid__item section_title small--one-whole medium-up--one-whole">
           		<h3><span role="text">Bars</span></h3>
           	</div>
            {% for variant in product.variants %}
              {% if variant.title contains 'MINIS' %}
                  
              {% else %}
                  <div class="grid__item bundle_product bundle_bar small--one-half medium--one-third large-up--one-quarter" data-product-handle="{{ variant.title | replace: ' ', '_' | downcase }}">
                     <div class="grid bundle-item" data-variant-id="{{ variant.id }}" data-qty="0">
                       	{% if variant.metafields.product.presale  != blank %}
                       		<div class="product-presale">{{ variant.metafields.product.presale }}</div>
                       	{% endif %}
                       	{% if variant.metafields.global.link != blank %}
                       		<a href="{{variant.metafields.global.link}}">
                       	{% endif %}
                        <img class="bundle-image" src="{{ variant.image.src | img_url: 'master' }}" alt="{{ variant.title }}">
                       	{% if variant.metafields.global.link != blank %}
                       		</a>
                       	{% endif %}
                       	<h4>Box of 6</h4>
                        <div class="h3 bundle-title">{{ variant.title }}</div>
                        <div class="bundle-handle hidden">{{ variant.title | replace: ' ', '_' | downcase }}</div>
                        {% if variant.available == false %}
                        <span class="h6 block">Out of stock</span>
                        {% else %}
                        <div class="bundle-item-selector">
                           <div class="grid initial-add">
                           	 <div class="grid__item small--one-whole medium-up--one-whole">
                             	<button class="btn">+</button>
                             </div>
                           </div>
                           <div class="grid">
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="minus">
                               	<button class="btn" disabled>-</button>
                               </span>
                             </div>
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="quantity">0</span>
                             </div>
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="plus">
                               	<button class="btn">+</button>
                               </span>
                             </div>
                           </div>
                        </div>
                        {% endif %}
                     </div>
                  </div>
              {% endif %}
            {% endfor %}
           	<div class="grid__item section_title small--one-whole medium-up--one-whole">
