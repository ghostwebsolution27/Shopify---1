                {% assign close-faq = 'https://cdn.shopify.com/s/files/1/0248/8084/0813/files/close_1.svg?v=1598448547' %}

                <div {{ block.shopify_attributes }} class="question-faq">
                  <button type="button" class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height" aria-controls="FAQ-content-1">
                    <img class="open-faq" src="{{ open-faq }}">
                    <img class="close-faq" src="{{ close-faq }}">
                    Nutrition Facts
                  </button>
                </div>

                <div id="FAQ-content-1" class="nutrition_faqs collapsible-content collapsible-content--all">
                  <div class="collapsible-content__inner collapsible-content__inner--faq rte">
                    <div class="grid desktop_nfp">
                      {% if section.settings.banana_bread_bar == true %}
                        <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                          <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Banana_Bread_Nutrition_Facts.png?v=1604064481">
                        </div>
                      {% endif %}
                      {% if section.settings.oat_cookie_bar == true %}
                        <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                          <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Oat_Cookie_Nutrition_Facts.png?v=1604064481">
                        </div>
                      {% endif %}
                      {% if section.settings.salted_brownie_bar == true %}
                        <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                          <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Salted_Brownie_Nutrition_Facts.png?v=1604064481">
                        </div>
                      {% endif %}
                      {% if section.settings.apple_crisp_bar == true %}
                        <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                          <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Apple_Crisp_Nutrition_Facts.png?v=1604064481">
                        </div>
                      {% endif %}
                    </div>
                    <div class="nfp-carousel" data-flickity='{ "cellAlign": "left", "contain": true }'>
                      {% if section.settings.banana_bread_bar == true %}
                         <div class="carousel-cell">
                           <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Banana_Bread_Nutrition_Facts.png?v=1604064481">
                         </div>
                      {% endif %}
                      {% if section.settings.oat_cookie_bar == true %}
                         <div class="carousel-cell">
                           <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Oat_Cookie_Nutrition_Facts.png?v=1604064481">
                         </div>
                      {% endif %}
                      {% if section.settings.salted_brownie_bar == true %}
                         <div class="carousel-cell">
                           <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Salted_Brownie_Nutrition_Facts.png?v=1604064481">
                         </div>
                      {% endif %}
                      {% if section.settings.apple_crisp_bar == true %}
                         <div class="carousel-cell">
                           <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Apple_Crisp_Nutrition_Facts.png?v=1604064481">
                         </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
           	</div>
           	<div class="grid__item section_title small--one-whole medium-up--one-whole">
              <div class="falvors_separator"></div>
              <h3><span role="text">Minis</span></h3>
           	</div>
            {% for variant in product.variants %}
              {% if variant.title contains 'MINIS' %}
           		  <div class="grid__item bundle_product bundle_mini small--one-half medium--one-third large-up--one-quarter" data-product-handle="{{ variant.title | replace: ' ', '_' | downcase }}">
