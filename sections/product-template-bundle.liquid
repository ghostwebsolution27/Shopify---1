                        <div class="h3 bundle-title">{{ variant.title | replace: 'MINIS', '' }}</div>
                        <div class="bundle-handle hidden">{{ variant.title | replace: ' ', '_' | downcase }}</div>
                        {% if variant.available == false %}
                        <span class="h6 block">Out of stock</span>
                        {% else %}
                        <div class="bundle-item-selector">
                           <div class="grid initial-add">
                           	 <div class="grid__item small--one-whole medium-up--one-whole">
                             	<button class="btn">+</button>
                             </div>
                           </div>
                           <div class="grid">
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="minus">
                               	<button class="btn" disabled>-</button>
                               </span>
                             </div>
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="quantity">0</span>
                             </div>
                             <div class="grid__item small--one-third medium-up--one-third">
                               <span class="plus">
                               	<button class="btn">+</button>
                               </span>
                             </div>
                           </div>
                        </div>
                        {% endif %}
                     </div>
                  </div>
              {% else %}
                  
              {% endif %}
            {% endfor %}
           <div class="grid__item section_title small--one-whole medium-up--one-whole">
             <div {{ block.shopify_attributes }} class="question-faq">
               <button type="button" class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height" aria-controls="FAQ-content-2">
                 <img class="open-faq" src="{{ open-faq }}">
                 <img class="close-faq" src="{{ close-faq }}">
                 Nutrition Facts
               </button>
             </div>

             <div id="FAQ-content-2" class="nutrition_faqs collapsible-content collapsible-content--all">
               <div class="collapsible-content__inner collapsible-content__inner--faq rte">
                 <div class="grid desktop_nfp">
                   {% if section.settings.banana_bread_mini == true %}
                     <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                       <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Banana_Bread_Mini_Nutrition_Facts.png?v=1604064481">
                     </div>
                   {% endif %}
                   {% if section.settings.oat_cookie_mini == true %}
                     <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                       <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Oat_Cookie_Mini_Nutrition_Facts.png?v=1604064481">
                     </div>
                   {% endif %}
                   {% if section.settings.salted_brownie_mini == true %}
                     <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                       <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Salted_Brownie_Mini_Nutrition_Facts.png?v=1604064481">
                     </div>
                   {% endif %}
                   {% if section.settings.apple_crisp_mini == true %}
                     <div class="grid__item small--one-whole medium--one-half large-up--one-quarter">
                       <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Apple_Crisp_Mini_Nutrition_Facts.png?v=1604064481">
                     </div>
                   {% endif %}
                 </div>
                 <div class="nfp-carousel" data-flickity='{ "cellAlign": "left", "contain": true }'>
                    {% if section.settings.banana_bread_mini == true %}
                       <div class="carousel-cell">
                         <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Banana_Bread_Mini_Nutrition_Facts.png?v=1604064481">
                       </div>
                    {% endif %}
                    {% if section.settings.oat_cookie_mini == true %}
                       <div class="carousel-cell">
                         <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Oat_Cookie_Mini_Nutrition_Facts.png?v=1604064481">
                       </div>
                    {% endif %}
                    {% if section.settings.salted_brownie_mini == true %}
                       <div class="carousel-cell">
                         <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Salted_Brownie_Mini_Nutrition_Facts.png?v=1604064481">
                       </div>
                    {% endif %}
                    {% if section.settings.apple_crisp_mini == true %}
                       <div class="carousel-cell">
                         <img src="https://cdn.shopify.com/s/files/1/0248/8084/0813/files/Apple_Crisp_Mini_Nutrition_Facts.png?v=1604064481">
                       </div>
                    {% endif %}
                 </div>
               </div>
             </div>
           </div>
         </div>
      </div>
      <div class="grid__item bundle-details medium-up--one-third">
         <div class="bundle-details">
           	<div class="bundle-banner">
              <h1 id="bundle_dummy">
                 <span role="text">{{ product.title }}</span>
              </h1>
              <div class="h1 bundle-price hidden-style">$0.00</div>
              {% comment %}
                <div class="bundle-qty">
                   Items:
                   <span class="current-qty">0</span>
                   of {{ bundle_max }}
                </div>
              {% endcomment %}
              {% form 'product', product, data-productid: product.id, class:form_classes, novalidate:
              'novalidate', data-product-form: '' %}
              <!-- Begin ReCharge code -->
              {% if product.available %}{% include 'subscription-bundle' %}{% endif %}
              <!-- End ReCharge code -->
              <select name="id" data-productid="{{ product.id }}" id="ProductSelect-{{ section.id }}"
                 class="product-form__variants no-js">
              {% for variant in product.variants %}
              <option value="{{ variant.idz }}"
              {%- if variant == current_variant %} selected="selected" {%- endif -%}
              >
              {{ variant.title }} {%- if variant.available == false %} - {{ 'products.product.sold_out'
              | t }}{% endif %}
              </option>
              {% endfor %}
              </select>
           	</div>
           	<div class="bundle-images grid">
           		<div class="bundle_placeholder grid__item small--one-quarter medium-up--one-quarter">
                	<img src="{{ placeholder_image }}">
                  	<h6 id="variant_1">Select Box</h6>
              	</div>
              	<div class="bundle_placeholder grid__item small--one-quarter medium-up--one-quarter">
                	<img src="{{ placeholder_image }}">
                  	<h6 id="variant_2">Select Box</h6>
              	</div>
              	<div class="bundle_placeholder grid__item small--one-quarter medium-up--one-quarter">
                	<img src="{{ placeholder_image }}">
                  	<h6 id="variant_3">Select Box</h6>
              	</div>
              	<div class="bundle_placeholder grid__item small--one-quarter medium-up--one-quarter">
                	<img src="{{ placeholder_image }}">
                  	<h6 id="variant_4">Select Box</h6>
              	</div>
           	</div>
            <div class="bundle-form product-form__controls-group product-form__controls-group--submit">
               <div class="product-form__item product-form__item--submit">
                  <button
                     id="bundle-add-to-cart"
                     type="submit"
                     name="add"
                     aria-label="{{ 'products.product.add_to_cart' | t }}"
                     class="btn product-form__cart-submit btn--primary-accent"
                     data-add-to-cart
                     disabled
                     >
                    <span class="bundle-price" data-add-to-cart-text></span> 
                    <span class="cart-text" data-add-to-cart-text>Select 2 Boxes</span> 
                  </button>
               </div>
            </div>
            {% endform %}
         </div>
      </div>
   </div>
</div>

