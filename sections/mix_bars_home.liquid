  {% if section.settings.subtitle != blank or section.settings.title != blank or section.settings.text != blank %}
    <div class="mix_bar_text__inner">
      <div class="background-media-text__aligner background-media-text--{{ section.settings.layout }}">
        <div class="animation-cropper">
          <div class="animation-contents mix_bars_inner_wrapper">
            <div class="image_left">
              {% if section.settings.image != blank %}
              <img src="{{ section.settings.image | img_url: '1200x' }}" alt="{{ section.settings.image.alt }}">
              {% endif %}
            </div>
            <div class="background-media-text__text">
                <p class="h3" style="color: {{ section.settings.color_text }};">{% if section.settings.subtitle %}{{ section.settings.subtitle }}{% endif %}<br>
              
                  <span style="color: {{ section.settings.color_text_fill }}; -o-text-stroke: 2px black; -moz-text-stroke: 2px black; -webkit-text-stroke: 2px black; text-stroke: 2px black;">{% if section.settings.title != blank %}{{ section.settings.title | escape }}{% endif %}</span></p>  
              
              {% if section.settings.text != blank %}
                <div class="rte background-media-text__subtext" style="color: {{ section.settings.color_text }};">{{ section.settings.text }}</div>
              {% endif %}
              <div class="image_right show_mobile_only">
              {% if section.settings.image != blank %}
              <img class="" src="{{ section.settings.image_right | img_url: '1200x' }}" alt="{{ section.settings.image_right.alt }}">
              {% endif %}
              </div>
              {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="btn">
                  {{ section.settings.button_label }}
                </a>
              {% endif %}
            </div>
            <div class="image_right hide_mobile_only">
              {% if section.settings.image != blank %}
              <img src="{{ section.settings.image_right | img_url: '1200x' }}" alt="{{ section.settings.image_right.alt }}">
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
</div>

<div class="background-media-text__spacer"></div>

{% schema %}
  {
    "name": "Mix Bars Section",
    "class": "index-section--flush",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Header",
        "default": "Impressive"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Header Outline",
        "default": "Large image with text box"
      },
      {
        "type": "color",
        "id": "color_text_fill",
        "label": "Outline Fill Color"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with a full-width image to draw attention to an important detail of your brand or product line.</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image Left"
      },
      {
        "type": "image_picker",
        "id": "image_right",
        "label": "Image Right"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#f4f4f4"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Mix Bars Section",
        "category": "Home"
      }
    ]
  }
{% endschema %}
