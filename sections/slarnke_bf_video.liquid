    <div class="gnts_videos">
      {%comment%}
       <div class="try_half try_sec_right_four" style="text-align:center;">
       {% if section.settings.image != blank %}
      <img class="image-try  try--{{ block.id }}"
                        src="{{ section.settings.image | img_url: '750x' }}"
                        alt="{{ section.settings.image.alt | escape }}">
      {% else %}
                    <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1052 400" style="background-color: #000;"></svg>
