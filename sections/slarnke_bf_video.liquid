     <div class="try-butn-ara"> <a class="hero_button_add btn  try-btn-ds trybutn_fullw" style="{% if block.settings.btn_bg_color != blank %} background-color:{{ block.settings.btn_bg_color }}; {% endif %}{% if block.settings.btn_color != blank %}
       color:{{ block.settings.btn_color }};{% endif %}" href="{{ block.settings.link }}">{{ block.settings.title }}</a></div>

              {% endcase %}
           
          {%- endfor -%}
      

     
    </div>
