          },
          {
            "type": "select",
            "id": "align_text",
            "label": "Text alignment",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Centered"
              }
            ]
          }
        ]
      },
      {
        "type": "question",
        "name": "Question",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Question",
            "default": "Frequently asked question"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to answer questions in as much detail as possible for your customers.</p>"
          }
        ]
      },
{
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Block Image"
          },      

          {
            "type": "select",
            "id": "align_image",
            "label": "Image alignment",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
{
                "value": "right",
                "label": "Right"
              },
              {
                "value": "center",
                "label": "Centered"
              }
            ]
          }
          
         
        ]
      },
{
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Button Text",
            "default": "Submit Now"
          },
{
            "type": "text",
            "id": "link",
            "label": "Button Link",
            "default": "#"
          },
          {
            "type": "color",
            "id": "btn_color",
            "label": "Button Color"
          },
{
            "type": "color",
            "id": "btn_bg_color",
            "label": "Button Background Color"
          }
        ]
      }
    ]
  }
{% endschema %}

