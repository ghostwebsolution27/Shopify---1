

{%- if section.blocks.size > 0 -%}
  <div class="page-width page-content spec_try">
    <div class="try_landing_sec sec_twos">
    <div class="try_half try_sec_left">
       
          {%- for block in section.blocks -%}
           
              {% case block.type %}
                {% when 'rich-text'%}
                  {% include 'try-sec-block-rich-text', section_class: 'try-qes-ans-sec' %} 
                {% when 'question'%}
                 {% comment %} {% include 'try-block-qus' %}{% endcomment %}
      
{% when 'image'%}
      <div class="secBock_image" style="text-align:{{ block.settings.align_image }};">
         <img class="image-try-blockc  try-imblcok{{ block.id }}"
                        src="{{ block.settings.image | img_url: '350x' }}"
                        alt="{{ block.settings.image.alt | escape }}">
      </div>
      {% when 'button'%}
     <div class="try-butn-ara"> <a class="hero_button_add btn  try-btn-ds try-button-full" style="{% if block.settings.btn_bg_color != blank %} background-color:{{ block.settings.btn_bg_color }}; {% endif %}{% if block.settings.btn_color != blank %}
       color:{{ block.settings.btn_color }};{% endif %}" href="{{ block.settings.link }}">{{ block.settings.title }}</a></div>

              {% endcase %}
           
          {%- endfor -%}
      

     
    </div>
    <div class="try_half try_sec_right">
       {% if section.settings.image != blank %}
      <img class="image-try  try--{{ block.id }}"
                        src="{{ section.settings.image | img_url: '750x' }}"
                        alt="{{ section.settings.image.alt | escape }}">
      {% else %}
                    <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1052 400" style="background-color: #000;"></svg>
       {% endif %}
      <div class="image_caption"> <p>{{ section.settings.imagecap }}</p></div>
    </div>
</div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Try Section Two",
    "settings": [
       {
            "type": "image_picker",
            "id": "image",
            "label": "Right Image"
          },
{
            "type": "text",
            "id": "imagecap",
            "label": "Image Caption",
            "default": "Elle & Meyers Leonard"
          },
{
            "type": "color",
            "id": "section_background",
            "label": "Section Background",
             "default": "#fff"
          }
    ],
    "default": {
      "blocks": [
    
    
{
          "type": "rich-text",
          "settings": {
            "title": "Shipping policy"
          }
        },
        {
